<!doctype html>
<html>
<head>
    <title>Anime Forum</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Profile Page</h1>
        <a href="/logout" class="loginBtn btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                    </p>

                    <!-- <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %> -->

            </div>
        </div>
        <div class="col-sm-6">
          <h2>Share with other Fans!</h2>
          <% if (user.local.email) { %>
            <form id="userInput" action="/messages" method="POST">
              <input type="text" value="<%= user.local.email %>" name="name">
              <input type="text" placeholder="Video URL" name="vidUrl">
              <textarea type="text" rows="5" cols="24" placeholder="Tell us about it!" name="msg"></textarea>
              <button class="submitBtn" type="submit">Submit</button>
            </form>
          </div>
          <% } %>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span class="userName"><%= messages[i].name %></span>
              <iframe width="560" height="315" src="<%= messages[i].vidUrl %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              <span class="userMsg"><%= messages[i].msg %></span>
                <div class="icons">
              <span class="icon"><%= messages[i].thumbUp %></span>
              <span><i class="icon fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="icon fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span data-id='<%= messages[i]._id %>'><i class="icon fa fa-trash" aria-hidden="true"></i></span>
            </li>
          </div>
          <% } %>
          </ul>
  
</div>

<script src="main.js"></script>

</body>
</html>
